{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "noEmit": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "__mocks__/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
